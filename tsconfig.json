{
  "include": ["./src/", "./custom.d.ts"],
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "#widgets/*": ["src/widgets/*"],
      "#features/*": ["src/features/*"],
      "#entities/*": ["src/entities/*"],
      "#shared/*": ["src/shared/*"],
    }
  }
}